---
import type { CollectionEntry } from "astro:content";
import PostCard from "../PostCard/PostCard.astro";
import { wrapper } from "./PostsList.css";

interface Props {
	posts: CollectionEntry<"posts">[];
}

const { posts } = Astro.props;
---

<div class={wrapper}>
	{
		posts.map(
			(post, index) => (
				<PostCard
					post={post}
					index={index}
				/>
			)
		)
	}
</div>
