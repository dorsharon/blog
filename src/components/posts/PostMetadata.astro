---
import {formatDate} from "../../utils/date-utils";
import { Icon } from 'astro-icon/components';
import {getUrl} from "../../utils/url-utils";

interface Props {
    publishDate: Date;
    tags: string[];
}

const {publishDate, tags } = Astro.props;
---

<div class={"flex flex-wrap text-neutral-500 dark:text-neutral-400 items-center gap-4 gap-x-4 gap-y-2"}>
    <!-- publish date -->
    <div class="flex items-center">
        <div class="meta-icon"
        >
            <Icon name="material-symbols:calendar-today-outline-rounded" class="text-xl"></Icon>
        </div>
        <span class="text-50 text-sm font-medium">{formatDate(publishDate)}</span>
    </div>


    <!-- tags -->
    <div class={"items-center flex"}>
        <div class="meta-icon"
        >
            <Icon name="material-symbols:tag-rounded" class="text-xl"></Icon>
        </div>

        <div class="flex flex-row flex-nowrap">
            {(tags && tags.length > 0) && tags.map(tag => <div
                    class="with-divider"
            >
                <a href={getUrl(`/archive/tag/${tag}/`)} aria-label=`View all posts with the ${tag} tag`
				   class="link-lg transition text-50 text-sm font-medium
                                hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap">
                    {tag}
                </a>
            </div>)}

            {!(tags && tags.length > 0) && <div class="transition text-50 text-sm font-medium">No tags</div>}
        </div>
    </div>
</div>

<style>
@tailwind components;

@layer components {
    .meta-icon {
        @apply w-8 h-8 transition rounded-md flex items-center justify-center bg-[var(--btn-regular-bg)]
        text-[var(--btn-content)] mr-2
    }
    .with-divider {
        @apply before:content-['/'] before:ml-1.5 before:mr-1.5 before:text-[var(--meta-divider)] before:text-sm
        before:font-medium before:first-of-type:hidden before:transition
    }
}
</style>