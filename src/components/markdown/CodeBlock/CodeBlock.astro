---
import { Code } from 'astro:components';
import type { BuiltinLanguage } from 'shiki';
import { codeBlock } from './CodeBlock.css';

interface Props {
	code: string;
	language?: 'ts' | 'bash';
}

const { code, language = 'ts' } = Astro.props;
---
<Code class={codeBlock} code={code} lang={language} theme="one-dark-pro" />